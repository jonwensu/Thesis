        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        <script src="{{ asset('bower_components/tinymce-dist/tinymce.js') }}"></script>
        <script src="{{ asset('bower_components/angular/angular.min.js') }}"></script>
