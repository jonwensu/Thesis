        <script src="{{ asset('partials/user/new/new.js')}}"></script>
        <script src="{{ asset('partials/user/show/show.js')}}"></script>
        <script src="{{ asset('partials/user/browse/browse.js')}}"></script>
        <script src="{{ asset('partials/user/edit/edit.js')}}"></script>
        <script src="{{ asset('template/js/jquery.noty.packaged.min.js')}}"></script>
